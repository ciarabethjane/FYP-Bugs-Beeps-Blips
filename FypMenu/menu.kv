#:kivy 2.0
#Create a screen manager to use for navigation purposes within the app
DisplayScreenManager:
    MainMenuScreen:
    SettingsScreen:
    SurveyScreen:
    FeedbackScreen:
    InformationScreen:
    OnboardSurveyScreen:

#Creating the main meny screen
<MainMenuScreen>:
    name: "mainMenuScreen"
    #What's the reasoning behind a float layout here?
    FloatLayout:
        GridLayout:
            rows: 2
            GridLayout:
                size_hint: None, None
                size: root.width, root.height*0.2
                #Create a label to display at the top of the page
                Label:
                    text: "Bugs Beeps and Blips"
            GridLayout:
                cols: 2
                size_hint: None, None
                #Why is this * 0.8?
                size: root.width*0.2, root.height*0.8
                padding: 20, 20
                #Create a button for the initial survey participants will take
                Button:
                    text: "Initial Survey"
                    background_color: .12, .84, 1, 1
                    on_press: 
                        root.manager.transition.direction = 'left'
                        app.root.current = 'onboardSurveyScreen'
                #Create a button for users to select to go to the settings page. 
                Button:
                    text: "Settings"
                    background_color: .12, .84, 1, 1
                    on_press: 
                    root.manager.transition.direction = 'left'
                    app.root.current = 'settingsScreen'
            #Why is there another GridLayout here?
            GridLayout:
                rows: 3
                size_hint: None, None
                size: root.width*0.8, root.height*0.8
                background_normal: ""
                padding: 50, 20
                Button:
                    text: "Survey"
                    background_color: .12, .84, 1, 1
                    on_press: 
                        root.manager.transition.direction = 'left'
                        app.root.current = 'surveyScreen'
                Button:
                    text: "Feedback"
                    background_color: .12, .84, 1, 1
                    on_press: 
                        root.manager.transition.direction = 'left'
                        app.root.current = 'feedbackScreen'
                    #Is this just here for testing purposes?
                    on_release: 
                        root.notify("Hello There", "Look at me, I'm a notification!")
                Button:
                    text: "Study Information"
                    background_color: .12, .84, 1, 1
                    on_press: 
                        root.manager.transition.direction = 'left'
                        app.root.current = 'informationScreen'

        
<SettingsScreen>:
    name: "settingsScreen"
    earliest_var : Earliest
    latest_var : Latest
    FloatLayout:
        GridLayout: 
            rows: 4
            GridLayout:
                cols: 1
                size_hint: None, None
                size: root.width, root.height*0.2
            Label: 
                text: "Please enter the time range in which you would like to receive Surveys"
        GridLayout:
            cols: 2
            size_hint: None, None
            size: root.width, root.height*0.4
            padding: 100,20
            Label: 
                text: "Earliest: "
                color: .12, .84, 1,1
            TextInput: 
                id : Earliest
                mutliline: False
            Label: 
                text: "Latest: "
                color: .12, .84, 1,1
            TextInput: 
                id: Latest
                mutliline : False
        GridLayout:
            rows: 1
            size_hint: None, None
            size: root.width, root.height*0.2
            padding: 100,0
            Button: 
                text: "Submit"
                on_press: root.submitButton()
                background_color: .12, .84, 1,1
        GridLayout: 
            cols: 4
            size_hint: None, None
            size: root.width, root.height*0.2
            padding: 100,20
            Label: 
            Label:
            Label: 
            Button: 
                text: "Back"
                on_press: 
                    root.manager.transition.direction = 'right'
                    app.root.current = "mainMenuScreen"

    
