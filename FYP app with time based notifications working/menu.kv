#:kivy 2.0


DisplayScreenManager:
    MainMenuScreen:
    SettingsScreen:
    SurveyScreen:
    AltSurveyScreen:
    FeedbackScreen:
    InformationScreen:
    OnboardSurveyScreen:
    
    

<MainMenuScreen>:
    name: "mainMenuScreen"
    #clock_var: clock
    

    FloatLayout:

        GridLayout: 
            rows: 2


            GridLayout: 
                cols: 2
                size_hint: None, None
                size: root.width, root.height*0.2

                Label:
                    text: "Bugs Beeps and Blips"

                #Button: 
                    #text: "time"
                    #on_press: 
                        #app.showTime(1)
                        #app.updateTime(1)
                        #app.setTargetTime(app.time_list)
                        #app.checkNotification(1)
                        #app.conituousylyCheck(1)
                       
                
                #Label: 
                    #id: clock
                    #text: "00:00"


            GridLayout: 
                cols: 2
                size_hint: None, None
                size: root.width, root.height*0.8

                GridLayout:
                    rows: 3
                    size_hint: None, None
                    size: root.width*0.2, root.height*0.8
                    padding: 20, 20

                    Button: 
                        text: "Initial Survey"
                        background_color: .12, .84, 1, 1
                        on_press: 
                            root.manager.transition.direction = 'left'
                            app.root.current = 'onboardSurveyScreen'

                    Button: 
                        text: "Settings"
                        background_color: .12, .84, 1, 1
                        on_press: 
                            root.manager.transition.direction = 'left'
                            app.root.current = 'settingsScreen'
                    Button: 
                        text: "Notification"
                        on_press: app.notify("Hello there!", "Look at me! I'm a notification!")
                    
            
                GridLayout:
                    rows: 3
                    size_hint: None, None
                    size: root.width*0.8, root.height*0.8
                    background_normal: ""
                    padding: 50, 20
                    

                    Button:
                        text: "Survey"
                        background_color: .12, .84, 1, 1
                        on_press: 
                            root.manager.transition.direction = 'left'
                            app.root.current = 'altSurveyScreen'
                        

                    Button:
                        text: "Feedback"
                        background_color: .12, .84, 1, 1
                        on_press: 
                            root.manager.transition.direction = 'left'
                            app.root.current = 'feedbackScreen'


                    Button: 
                        text: "Study Information"
                        background_color: .12, .84, 1, 1
                        on_press: 
                            root.manager.transition.direction = 'left'
                            app.root.current = 'informationScreen'

<SettingsScreen>:
    name: "settingsScreen"
    #earliest_var : Earliest
    #latest_var : Latest

    FloatLayout: 

        GridLayout: 
            rows: 4
    
            GridLayout: 
                cols: 1
                size_hint: None, None
                size: root.width, root.height*0.2

                Label: 
                    text: "Please enter the time range in which you would like to receive Surveys"
                
            GridLayout:
                cols: 2
                size_hint: None, None
                size: root.width, root.height*0.4
                padding: 100, 20

                Label: 
                    text: "Earliest: "
                    color: .12, .84, 1,1
                TextInput: 
                    id : Earliest
                    mutliline: False
                Label: 
                    text: "Latest: "
                    color: .12, .84, 1,1
                TextInput: 
                    id: Latest
                    mutliline : False

            GridLayout: 
                rows: 1
                size_hint: None, None, 
                size: root.width, root.height *0.2
                padding: 100, 0

                Button: 
                    text: "Submit"
                    on_press: app.submitButton()
                    background_color: .12, .84, 1,1

            GridLayout: 
                cols: 4
                size_hint: None, None
                size: root.width, root.height*0.2
                padding: 100, 20
                Label: 
                Label:
                Label: 

                Button: 
                    text: "Back"
                    on_press: 
                        root.manager.transition.direction = 'right'
                        app.root.current = "mainMenuScreen"
   
<SurveyScreen>:
    name: "surveyScreen"

    FloatLayout:

        GridLayout: 
            rows: 3

            GridLayout: 
                cols: 1
                size_hint: None, None
                size: root.width , root.height*0.2
                padding: 100,50

                Label: 
                    text: "UCC Logo here"
        
            GridLayout:

                cols: 2
                size_hint: None, None
                size: root.width, root.height*0.6
                padding: 100,50

                Button:
                    text: "Survey 1"
                    on_press: app.toSurvey()
                    background_color: .12, .84, 1,1
                    
                
                Button:
                    text: "Survey 2"
                    on_press: app.toSurvey()
                    background_color: .12, .84, 1,1

                Button:
                    text: "Survey 3"
                    on_press: app.toSurvey()
                    background_color: .12, .84, 1,1

                Button:
                    text: "Survey 4"
                    on_press: app.toSurvey()
                    background_color: .12, .84, 1,1

                Button:
                    text: "Survey 5"
                    on_press: app.toSurvey()
                    background_color: .12, .84, 1,1

                Button:
                    text: "Survey 6"
                    on_press: app.toSurvey()
                    background_color: .12, .84, 1,1


            GridLayout: 
                cols: 5
                size_hint: None, None
                size: root.width, root.height* 0.2
                padding: 100,20

                Label:
                Label:
                Label:
                Label:
                
                Button: 
                    text: "Back"
                    on_press: 
                        root.manager.transition.direction = 'right'
                        app.root.current = "mainMenuScreen"

<AltSurveyScreen>
    name: "altSurveyScreen"

    FloatLayout:

        GridLayout: 
            rows: 4

            GridLayout: 
                cols: 1
                size_hint: None, None
                size: root.width , root.height*0.2
                padding: 100,50

                Label: 
                    text: "UCC Logo here"
        
            GridLayout:

                rows: 1
                size_hint: None, None
                size: root.width, root.height*0.4
                padding: 100,50

                Button:
                    text: "Click here to start the Survey"
