                        #app.toSurvey()
                        app.surveyTaken()
                    background_color: .12, .84, 1,1
            
            GridLayout: 
                cols: 3
                size_hint: None, None
                size: root.width, root.height*0.2
                padding: 100,10
    
                Label:

                Button:
                    text: "Snooze"
                    background_color: .12, .84, 1,1
                    on_press: app.snooze()

                
                Label:


            GridLayout: 
                cols: 5
                size_hint: None, None
                size: root.width, root.height* 0.2
                padding: 100,20

                Label:
                Label:
                Label:
                Label:
                
                Button: 
                    text: "Back"
                    on_press: 
                        root.manager.transition.direction = 'right'
                        app.root.current = "mainMenuScreen"



